<article class="users">
  <header>

    <div id="welcome">
      <h1 id="strapline">Connect with<br />entrepreneurs in Cardiff</h1>
      <p id="teaser">
        <%= link_to 'Sign up', new_user_registration_path %> and tell us what you know about, and what you'd like to know more about.
        Then get in touch with someone and start talking.
        Whether you're a seasoned entrepreneur, investor, first-timer, or a student, everyone is welcome.
      </p>
      <p>
        <%= link_to all_tags_path, class: 'tag-tease' do %>
          Find out how Cardiff Start can help your business &rarr;
        <% end %>
      </p>
    </div>


    <ol class="index cf">
      <% ("A".."Z").each do |letter| %>
        <li><%= link_to letter, "##{ letter.downcase }" %></li>
      <% end %>
    </ol>
  </header>

  <% @users_letters.each do |letter, users| %>
    <h2 id="<%= letter.downcase %>" class="index-letter"><%= letter.upcase %></h2>

    <ol class="user-list cf">
      <% users.each do |user| %>
        <li class="user">
          <%= gravatar_image_tag user.email, alt: user.name, class: 'avatar', gravatar: { size: 80 } %>
          <div class="info">
            <%= link_to user.name, user_path(user) %>
            <% if user.company? %>
              <span class="company"><%= user.company %></span>
            <% else %>
              <br />
            <% end %>
          </div>
        </li>
      <% end %>
    </ol>
  <% end %>
</article>